<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>skija</groupId>
    <artifactId>skija</artifactId>
    <version>0.1.0</version>
    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>
    <build>
        <resources>
            <resource>
                <directory>target/native</directory>
                <includes>
                    <include>libskija.dylib</include>
                </includes>
            </resource>
        </resources>
    </build>
    <distributionManagement>
        <repository>
            <id>bintray-repo-skija</id>
            <name>bintray-skija</name>
            <url>https://api.bintray.com/maven/olonho/skija/skija/;publish=1;override=1</url>
        </repository>
    </distributionManagement>
</project>
